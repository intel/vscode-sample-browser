{
	"name": "oneapi-samples",
	"displayName": "Intel oneAPI Sample Browser",
	"description": "Intel oneAPI code samples made easily downloadable",
	"publisher": "intel-corporation",
	"version": "0.0.17",
	"license": "MIT",
	"icon": "media/icon.png",
	"preview": true,
	"engines": {
		"vscode": "^1.40.0"
	},
	"enableProposedApi": false,
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:intel.oneAPISamples.tree",
		"onCommand:intel.oneAPISamples.clean",
		"onCommand:intel.oneAPISamples.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "intel.oneAPISamples.clean",
				"title": "Intel oneAPI: Clean local sample cache and refresh",
				"when": "false"
			},
			{
				"command": "intel.oneAPISamples.refresh",
				"title": "Intel oneAPI: Refresh/update sample tree",
				"when": "false",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "intel.oneAPISamples.create",
				"title": "Create",
				"icon": {
					"light": "resources/light/create.svg",
					"dark": "resources/dark/create.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "inteloneapisamples",
					"title": "Intel oneAPI",
					"icon": "media/drawing.svg"
				}
			]
		},
		"views": {
			"inteloneapisamples": [
				{
					"id": "intel.oneAPISamples.tree",
					"name": "Samples"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "intel.oneAPISamples.create",
					"when": "view == intel.oneAPISamples.tree && viewItem == sample"
				},
				{
					"command": "intel.oneAPISamples.create",
					"when": "view == intel.oneAPISamples.tree && viewItem == sample",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "intel.oneAPISamples.refresh",
					"when": "view == intel.oneAPISamples.tree",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "intel.oneAPISamples.create",
					"when": "false"
				}
			]
		},
		"configuration": {
			"title": "Intel oneAPI Sample Browser",
			"properties": {
				"inteloneapi.samples.baseURL": {
					"type": "string",
					"default": null,
					"description": "Base URL for the samples"
				},
				"inteloneapi.samples.pathToCLI": {
					"type": "string",
					"default": null,
					"description": "Specifies an aboslute path for a 'oneapi-cli' to use for sample acquisition"
				},
				"inteloneapi.samples.skipDependencyChecks": {
					"type": "boolean",
					"default": false,
					"description": "Skips checking for install dependency a sample may require"
				},
				"inteloneapi.samples.sampleLanguage": {
					"type": "string",
					"default": "cpp",
					"description": "Specifies the langauge for the sample tree to use"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint -c .eslintrc.js --ext .ts ./",
		"package": "vsce package --yarn --baseContentUrl https://gitlab.devtools.intel.com/sip-oneapi/vscode-oneapi-sample/raw/master/"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.9",
		"@types/request-promise": "^4.1.45",
		"@types/vscode": "1.40",
		"@types/node-fetch": "^2.5.4",
		"@types/semver": "^7.1.0",
		"@typescript-eslint/eslint-plugin": "^2.19.0",
		"@typescript-eslint/parser": "^2.19.0",
		"eslint": "^6.8.0",
		"mocha": "^7.0.1",
		"typescript": "^3.3.1",
		"vsce": "^1.73.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"node-fetch": "^2.6.0",
		"semver": "^7.1.2"
	},
	"extensionDependencies": [
		"vscode.markdown-language-features"
	],
	"repository": {
		"type": "git",
		"url": "https://gitlab.devtools.intel.com/sip-oneapi/vscode-oneapi-sample.git"
	}
}
