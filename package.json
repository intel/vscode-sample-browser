{
	"name": "vscode-oneapi-sample",
	"displayName": "Intel oneAPI Sample Browser",
	"description": "Intel oneAPI Sample Browser",
	"publisher": "intel-corporation",
	"version": "0.0.8",
	"license": "MIT",
	"preview": true,
	"engines": {
		"vscode": "^1.40.0"
	},
	"enableProposedApi": false,
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:oneapisamples.cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "oneapisamples.clean",
				"title": "Clean local sample cache and refresh",
				"when": "false"
			},
			{
				"command": "oneapisamples.refresh",
				"title": "Refresh/update sample tree",
				"when": "false",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				  }
			},
			{
				"command": "oneapisamples.create",
				"title": "Create",
				"icon": {
					"light": "resources/light/create.svg",
					"dark": "resources/dark/create.svg"
				  }
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "upmView",
					"title": "oneAPI Samples",
					"icon": "media/drawing.svg"
				}
			]
		},
		"views": {
			"upmView": [
				{
					"id": "oneapisamples.cpp",
					"name": "View"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "oneapisamples.create",
					"when": "view == oneapisamples.cpp && viewItem == sample"
				},
				{
					"command": "oneapisamples.create",
					"when": "view == oneapisamples.cpp && viewItem == sample",
					"group": "inline"
				}
			],
			"view/title": [
				{
				  "command": "oneapisamples.refresh",
				  "when": "view == oneapisamples.cpp",
				  "group": "navigation"
				}
			  ],
			"commandPalette": [
				{
					"command": "oneapisamples.create",
					"when": "false"
				}
			]
		},
		"configuration": {
			"title": "Intel oneAPI Sample Browser",
			"properties": {
			  "inteloneapi.samples.baseURL": {
				"type": "string",
				"default": null,
				"description": "Base URL for the samples"
			  },
			  "inteloneapi.samples.pathToCLI": {
				"type": "string",
				"default": null,
				"description": "Specifies an aboslute path for a 'oneapi-cli' to use for sample acquisition"
			  },
			  "inteloneapi.samples.skipDependencyChecks": {
				"type": "boolean",
				"default": false,
				"description": "Skips checking for install dependency a sample may require"
			  },
			  "inteloneapi.samples.sampleLanguage": {
				"type": "string",
				"default": "cpp",
				"description": "Specifies the langauge for the sample tree to use"
			  }
			  
			}
		  }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"package": "vsce package --yarn --baseContentUrl https://gitlab.devtools.intel.com/sip-oneapi/vscode-oneapi-sample/raw/master/"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.9",
		"@types/request-promise": "^4.1.44",
		"@types/vscode": "1.40",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vsce": "^1.71.0",
		"vscode-test": "^1.2.3"
	},
	"dependencies": {
		"@types/request-promise-native": "^1.0.16",
		"@types/semver": "^7.1.0",
		"promisify-child-process": "^3.1.1",
		"request": "^2.88.0",
		"request-promise-native": "^1.0.8"
	},
	"extensionDependencies": [
		"vscode.markdown-language-features"
	],
	"repository": {
		"type": "git",
		"url": "https://gitlab.devtools.intel.com/sip-oneapi/vscode-oneapi-sample.git"
	}
}
